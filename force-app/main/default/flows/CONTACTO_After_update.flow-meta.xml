            <label>Si se modifica el nombre o apellidos</label>
        </rules>
        <rules>
            <name>EdadModificada</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Edad__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Edad__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>1.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>ActualizarAnioNacimiento</targetReference>
            </connector>
            <label>Edad modificada</label>
        </rules>
        <rules>
            <name>AnioNacimientoModificado</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.AnoNacimiento__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.AnoNacimiento__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>1900.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>ActualizarEdad</targetReference>
            </connector>
            <label>Año nacimiento modificado</label>
        </rules>
    </decisions>
